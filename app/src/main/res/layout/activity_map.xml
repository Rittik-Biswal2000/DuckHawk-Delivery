<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="New Order"-->
<!--        android:layout_gravity="center"-->
<!--        android:id="@+id/newdelivery"-->
<!--        android:background="#FFFF00"-->
<!--        android:layout_margin="15dp"/>-->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distance"
                        android:background="#ffff00"
                        android:text="  Distance  "
                        android:layout_marginStart="20dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffff00"
                        android:text="  Direction  "
                        android:textColor="#000000"/>

                </RelativeLayout>
    <TextView
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name And Address"
        android:background="#C0C0C0"
        android:textColor="#000000"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyer"
        android:text="Buyer"/>
    <TextView

        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="Address"/>
    <TextView
        android:background="#C0C0C0"
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Details"/>
    <TextView
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodcat"
        android:id="@+id/prodcat"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prodid"
        android:text="Prodid"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:text="Price"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notification"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        android:textSize="15sp"
        android:layout_gravity="center"
        app:cornerRadius="8dp"
        android:backgroundTint="#ADD8E6"
        android:layout_marginBottom="15dp"
        app:strokeWidth="2dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/call"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Customer"
            android:textSize="15sp"
            app:cornerRadius="8dp"
            app:strokeColor="#00ff00"
            app:strokeWidth="2dp"
            app:backgroundTint="#00ff00"
            app:icon="@drawable/call"
            android:layout_marginRight="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delivery"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/cancel"
            android:text="Cancel Delivery"
            android:textSize="15sp"
            app:cornerRadius="8dp"
            android:backgroundTint="#ff0000"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#ff0000"
            app:strokeWidth="2dp" />
    </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>