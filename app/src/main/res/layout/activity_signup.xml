<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DuckHawk - Delivery"
        android:textSize="30sp"
        android:background="@color/blue"
        android:padding="7sp"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application Form"
        android:textSize="20sp"
        android:background="@color/yellow"
        android:padding="5sp"
        android:textColor="@android:color/black"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7sp"
        android:overScrollMode="ifContentScrolls">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_input"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_input"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_name"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Father's Name"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_name"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monther's Name"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone No."
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/adhar"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adhaar No."
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>





<!--            <LinearLayout-->
<!--                android:id="@+id/Adhaar"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="150sp"-->
<!--                android:layout_weight=".30"-->
<!--                android:orientation="vertical"-->
<!--                android:gravity="center"-->
<!--                android:background="@drawable/border">-->

<!--                <TextView-->
<!--                    android:textAlignment="center"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:drawableTop="@drawable/photo"-->
<!--                    android:text="Aadhar Card Photo"-->
<!--                    android:textColor="@android:color/black"-->
<!--                    android:textSize="15sp" />-->
<!--            </LinearLayout>-->

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/divlin"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Driving Licence"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bikeno"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bike No."
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


<!--            <ImageView-->
<!--                android:id="@+id/dlpic"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="150sp"-->
<!--                android:layout_weight=".30" />-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="150sp"
                android:layout_weight=".40"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_margin="2.5sp"
                android:onClick="addAadhar">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/aapicsug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/photo"
                    android:text="Aadhar Card Photo"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/Adhaar"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="always"
                    android:visibility="gone"
                    />



            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="150sp"
                android:layout_weight=".40"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_margin="2.5sp"
                android:onClick="addDlpic">

                <TextView
                    android:id="@+id/dlpicsug"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/photo"
                    android:text="Driving Licence Photo"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/dlpic"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="always"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:onClick="addBikePic"
                android:layout_width="0dp"
                android:layout_height="150sp"
                android:layout_weight=".40"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_margin="2.5sp">

                <TextView
                    android:id="@+id/bikepicsug"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/photo"
                    android:text="Upload Your Bike photo"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/bikepic"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="always"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:onClick="addProfilePic"
                android:layout_width="0dp"
                android:layout_height="150sp"
                android:layout_weight=".40"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_margin="2.5sp">

                <TextView
                    android:id="@+id/passpicsug"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/photo"
                    android:text="Pass Size Photo"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/PassPic"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="always"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Address"
                android:inputType="textMultiLine"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p_station"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Police Station"
                android:inputType="textPostalAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bank_name"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank Name"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bnkacc_input"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank Account No."
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/IFSC"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IFSC Number"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"/>

        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:onClick="conformInput"
            android:textAllCaps="false"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    </ScrollView>



</LinearLayout>